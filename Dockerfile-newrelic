FROM rust:1.82 AS builder

WORKDIR /app

# Create a minimal Cargo.toml for the New Relic collector
COPY Cargo-newrelic.toml ./Cargo.toml
COPY newrelic-collector.rs ./src/main.rs

# Build the binary
RUN cargo build --release

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Copy the binary
COPY --from=builder /app/target/release/postgres-newrelic-collector /usr/local/bin/postgres-collector

# Create non-root user
RUN useradd -m -u 1000 collector

USER collector

EXPOSE 8080

ENTRYPOINT ["/usr/local/bin/postgres-collector"]
CMD ["-c", "/etc/collector/config.toml"]